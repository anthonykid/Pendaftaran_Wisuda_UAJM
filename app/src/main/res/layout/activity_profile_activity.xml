<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4DD45"
    tools:context=".profile_activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Harap Di Isi Sebaik Mungkin, Karena Akan Digunakan Pada Buku Wisuda"
                android:textSize="28sp"
                android:textStyle="bold"
                />

        <EditText
            android:id="@+id/user_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#020202"
            android:textColorHint="#706A6A" />

        <EditText
            android:id="@+id/user_profile_stambuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:maxLength="7"
            android:background="#FFFFFF"
            android:inputType="number"
            android:ems="10"
            android:hint="Stambuk"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#706A6A" />

        <EditText
            android:id="@+id/user_profile_fakultas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Fakultas (Ex. Teknik)"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#706A6A" />

        <EditText
            android:id="@+id/user_profile_jurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Jurusan (Ex. Teknik Sipil)"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#706A6A" />

        <EditText
            android:id="@+id/user_profile_judul_skripsi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Judul Skripsi"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#706A6A" />

        <EditText
            android:id="@+id/user_profile_ttl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Tempat dan Tanggal Lahir \n(Ex.Makassar dd/mm/yyyy)"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#706A6A" />

        <EditText
            android:id="@+id/user_profile_whattsap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Nomor Whatsapp (Ex.08123456789)"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#706A6A" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Jenis Kelamin :"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/dtor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Laki-laki"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorHint="#FFFEFE"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"></RadioButton>

                <RadioButton
                    android:id="@+id/rtod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorHint="#FFFEFE"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"></RadioButton>
            </RadioGroup>

            <Button
                android:id="@+id/userinfo_update_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="#3C38BA"
                android:text="Input Data"
                app:cornerRadius="25dp"
                android:textSize="18dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Created By AnthonyKid"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingRight="10dp"
                android:gravity="end"/>
        </TableLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>